{{ ansible_managed | comment }}
include "modules.default.conf";
include "opers.conf";
include "aliases/anope.conf";
include "help/help.conf";
include "badwords.conf";
include "spamfilter.conf";

admin {
  "Hashbang IRC Staff";
  "staff@hashbang.sh";
};

me {
  name "{{ ansible_fqdn }}";
  info "Hashbang IRC Network";
  sid {{ irc_numeric }};
};

class clients {
  pingfreq 90;
  maxclients 1000;
  sendq 100000;
  recvq 8000;
};

class servers {
  pingfreq 90;
  maxclients 10;
  sendq 1000000;
  connfreq 100;
};

{% for server in groups.irc_servers if not server == ansible_fqdn %}
link {{ server }} {
  username *;
  hostname "{{ server }}";
  port 6697;
  password-connect "{{ irc.link_keys.irc }}";
  password-receive "{{ irc.link_keys.irc }}";
  hub *;
  class servers;
  options {
    nohostcheck;
    nodnscache;
    autoconnect;
    ssl;
  };
};

{% endfor %}

{% for server in groups.irc if not server == ansible_fqdn %}
link {{ server }} {
  incoming {
    mask *;
  };
  outgoing {
    bind-ip (null);
    hostname {{ server }};
    port 6697;
    options { ssl; };
  };
  class servers;
  password "{{ irc.link_keys.irc }}";
};

ulines { {{ server }}; };
{% endfor %}

{% for service in ['Nick', 'Chan', 'Memo', 'Oper', 'Bot', 'Host'] %}
ban nick {
  mask "{{ service }}Serv";
  reason "Reserved for services.";
};
{% endfor %}

allow {
  ip "*@*";
  class clients;
  maxperip 1000;
  options {
    useip;
  };
};

allow {
  hostname "*@*.hashbang.sh";
  class clients;
  maxperip 1000;
};

log "/usr/lib64/unrealircd/logs/ircd.log" {
  maxsize 5MB;
  flags {
    errors;
    kills;
    tkl;
    connects;
    server-connects;
    oper;
    sadmin-commands;
    chg-commands;
    oper-override;
    spamfilter;
  };
};

listen {
  ip *;
  port 6697;
  options { ssl; };
};

listen {
  ip *;
  port 6800;
  options { ssl; };
  ssl-options {
    options { no-client-certificate; };
  };
};

/* Network configuration */
set {
  network-name        "#!";
  default-server      "{{ ansible_fqdn }}";
  services-server     "services.{{ ansible_fqdn }}";
  help-channel        "#help";
  hiddenhost-prefix   "#!";
  cloak-keys {
    {% for item in irc.cloak_keys %}
    "{{ item }}";
    {% endfor %}
  };
  ssl {
    trusted-ca-file "/usr/lib64/unrealircd/ssl/etc/letsencrypt/live/{{ ansible_fqdn }}/chain.pem";
    certificate "/usr/lib64/unrealircd/ssl/etc/letsencrypt/live/{{ ansible_fqdn }}/fullchain.pem";
    key "/usr/lib64/unrealircd/ssl/etc/letsencrypt/live/{{ ansible_fqdn }}/privkey.pem";
    server-cipher-list "ECDH+AESGCM256:ECDH+AESGCM128:ECDH+AES256:ECDH+AES128:!aNULL:!MD5:!RC4:!DSS:!EXPORT";
  };
  sasl-server "services.{{ ansible_fqdn }}";
};

/* Server specific configuration */
set {
  kline-address       "team@hashbang.sh";
  modes-on-connect    "+iwx";
  modes-on-oper       "+xwgs";
  snomask-on-oper     "+ksfvGqo";
  oper-auto-join      "#!opers";
  options {
    hide-ulines;
    identd-check;
    show-connect-info;
  };

  maxchannelsperuser 20;
  anti-spam-quit-message-time 10s;

  oper-only-stats "okfGsMRUEelLCXzdD";

#    throttle {
#        connections 3;
#        period 60s;
#    };

  anti-flood {
    nick-flood 3:60;    /* 3 nickchanges per 60 seconds (the default) */
  };

  spamfilter {
    ban-time 1d;
    ban-reason "Spam/Advertising";
    virus-help-channel "#help";
  };
};

include "operclass.default.conf";
